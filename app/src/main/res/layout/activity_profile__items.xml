<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:fitsSystemWindows="true"
    tools:context="com.semicolon.librarians.libraryguide.Activities.Profile_Items">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/updateProfile_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/homepage_toolbar"
            app:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            >
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/white_back_arrow"
                    android:padding="@dimen/_10sdp"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/ident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/base"
                    android:textSize="@dimen/_16sdp"
                    android:layout_toRightOf="@+id/back_arrow"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/appBar"
        android:padding="@dimen/_10sdp"
        >

        <EditText
            android:id="@+id/ident_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:inputType="textEmailAddress"
            app:backgroundTint="@color/centercolor"
            android:textSize="@dimen/_15sdp"
            />
    </LinearLayout>

    <View
        android:layout_above="@+id/bc"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ededed"
        />
    <LinearLayout
        android:id="@+id/bc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/doneBtn"
            android:layout_width="0dp"
            android:layout_weight=".95"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:textSize="@dimen/_14sdp"
            android:background="@android:color/transparent"

            />
        <View
            android:layout_width="0dp"
            android:layout_weight=".007"
            android:layout_height="match_parent"
            android:background="#ededed"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_weight=".95"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="@dimen/_14sdp"
            android:background="@android:color/transparent"
            />


    </LinearLayout>
</RelativeLayout>
