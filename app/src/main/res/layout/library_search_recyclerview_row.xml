<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/base"
        app:contentPadding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >

            <ImageView
                android:id="@+id/library_image_item"
                android:src="@drawable/user_profile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/library_name_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/library_image_item"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/library_country_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="#757575"
                android:singleLine="true"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/library_image_item"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@+id/library_name_item"
                android:layout_marginTop="@dimen/_5sdp"

                android:gravity="left|center_vertical"
                />
            <TextView
                android:id="@+id/library_type_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="13sp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/library_image_item"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@+id/library_country_item"
                android:layout_marginTop="@dimen/_2sdp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </FrameLayout>

