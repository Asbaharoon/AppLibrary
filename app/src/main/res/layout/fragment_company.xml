<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/comp_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/comp_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base"
            >

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <ProgressBar
        android:id="@+id/comp_prgBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:id="@+id/error_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        >
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/conn"
            android:background="@drawable/no_friend_container"
            android:padding="@dimen/_15sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/something_haywire"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nodata_container"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/no_friend_container"

        android:visibility="gone"
        >
        <ImageView

            android:layout_width="100sp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/nodata"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/there_are_no_companies_to_display"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"

            />
    </LinearLayout>
</FrameLayout>