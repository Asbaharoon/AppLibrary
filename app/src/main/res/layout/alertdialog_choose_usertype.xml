<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/who_are_you"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            />

    </LinearLayout>
<RadioGroup
    android:id="@+id/rb_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:padding="@dimen/_3sdp"
    >
    <RadioButton
        android:id="@+id/rb_normaluser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user"
        app:buttonTint="@color/centercolor"
        android:textColor="@color/centercolor"
        android:checked="true"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"

        />
    <RadioButton
        android:id="@+id/rb_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/library"
        app:buttonTint="@color/centercolor"
        android:textColor="@color/centercolor"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"


        />
    <RadioButton
        android:id="@+id/rb_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publisher"
        app:buttonTint="@color/centercolor"
        android:textColor="@color/centercolor"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"

        />
    <RadioButton
        android:id="@+id/rb_university"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/university"
        app:buttonTint="@color/centercolor"
        android:textColor="@color/centercolor"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"

        />
    <RadioButton
        android:id="@+id/rb_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company"
        app:buttonTint="@color/centercolor"
        android:textColor="@color/centercolor"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"

        />
</RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        >

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:background="@color/centercolor"
            android:textColor="@color/base"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            />
    </LinearLayout>
</LinearLayout>