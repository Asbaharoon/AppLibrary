<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="@color/base"
                >
                <ImageView
                    android:id="@+id/publisher_image"
                    android:src="@drawable/user_profile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:id="@+id/publisher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="publisher name"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@android:color/black"
                    android:paddingRight="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/publisher_image"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
                <TextView
                    android:id="@+id/publisher_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="publisher country"
                    android:textSize="@dimen/_13sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#424242"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@+id/publisher_name"
                    android:layout_toRightOf="@+id/publisher_image"
                    android:layout_marginLeft="@dimen/_5sdp"




                    />
                <TextView
                    android:id="@+id/publisher_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="publisher email@gmail.com"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:ellipsize="end"
                    android:textColor="#757575"

                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/publisher_country"
                    android:layout_toRightOf="@+id/publisher_image"
                    android:layout_marginLeft="@dimen/_5sdp"

                    />
                <TextView
                    android:id="@+id/publisher_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="publisher site"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:ellipsize="end"
                    android:textColor="#757575"

                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/publisher_email"
                    android:layout_toRightOf="@+id/publisher_image"
                    android:layout_marginLeft="@dimen/_5sdp"

                    />
                <TextView
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/centercolor"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/publisher_site"


                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:background="@color/whit_gray"
                    android:layout_below="@+id/more"
                    android:layout_toRightOf="@+id/publisher_image"
                    android:layout_marginLeft="@dimen/_5sdp"


                    />
            </RelativeLayout>

    </FrameLayout>

