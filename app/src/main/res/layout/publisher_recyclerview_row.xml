<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_155sdp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_5sdp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight=".65"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:id="@+id/publisher_image"
                        android:src="@drawable/header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_centerVertical="true"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="1.35"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/publisher_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="publisher name"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:gravity="center_vertical|left"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@android:color/black"
                        android:paddingRight="@dimen/_2sdp"
                        android:drawableRight="@drawable/arrow_icon"
                        />

                    <TextView
                        android:id="@+id/publisher_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="publisher country"
                        android:textSize="@dimen/_14sdp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:layout_gravity="left|center"
                        android:textColor="#424242"
                        android:layout_marginTop="@dimen/_10sdp"
                        />

                    <TextView
                        android:id="@+id/publisher_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="publisher email@gmail.com"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:ellipsize="end"
                        android:textColor="#757575"


                        />


                    <TextView
                        android:id="@+id/publisher_site"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="publisher site"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:ellipsize="end"
                        android:textColor="#757575"


                        />
                    <TextView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:gravity="end"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:textColor="@color/centercolor"
                        android:layout_gravity="right|end"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

